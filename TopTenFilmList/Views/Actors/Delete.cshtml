@{
  Layout = "_Layout";
}

@model TopTenFilmList.Models.Actor

<div class="card border-danger mb-3">
  <div class="card-header bg-danger text-white">Delete Actor</div>
  <div class="card-body">
    <h5 class="card-title">Are you sure you want to delete this actor?</h5>
    <p class="card-text">
      <strong>@Html.DisplayNameFor(model => model.ActorFName):</strong> @Html.DisplayFor(model => model.ActorFName)<br>
      <strong>@Html.DisplayNameFor(model => model.ActorLName):</strong> @Html.DisplayFor(model => model.ActorLName)
    </p>
    @using (Html.BeginForm())
    {
      <button type="submit" class="btn btn-danger">Delete</button>
    }
  </div>
</div>

@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
