@{
  Layout ="_Layout";
}

@using TopTenFilmList.Models;

<h1>Actors</h1>

@if (@Model.Count == 0)
{
  <h3>No actors have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Actor actor in Model)
  {
    <li>@Html.ActionLink($"{actor.ActorFName}", "Details", new { id = actor.ActorId})</li>
    @* | @actor.Film.FilmName  *@
  }
  </ul>
}

<p>@Html.ActionLink("Add new actor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>