@{
  Layout = "_Layout";
}

@using TopTenFilmList.Models
@model TopTenFilmList.Models.Film

<h2>Film Details: @Html.DisplayFor(model => model.FilmName)</h2>
<hr />
<h3>Film Rating: @Html.DisplayFor(model => model.FilmAverageRating)</h3>
<h4>Film MPA Rating: @Html.DisplayFor(model => model.FilmMPARating)</h4> 
<h4>Film Description: </h4>
<p>@Html.DisplayFor(model => model.FilmDescription)</p>

@if(@Model.JoinEntities.Count == 0)
{
  <p>No Actors have been added to this film!</p>
}
else
{
  <h4>This Film has the following Actors:</h4>
  <ul>
    @foreach(FilmActor join in Model.JoinEntities)
    {
      <li>@Html.ActionLink($"{join.Actor.ActorFName}", "Details", "Actors", new { id = join.Actor.ActorId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Back to Films", "Index")</p>
<!-- <p>@Html.ActionLink("Add an actor for this film", "AddActor", new { id = Model.FilmId })</p> -->
<p>@Html.ActionLink("Edit Film", "Edit", new { id = Model.FilmId })</p>
<p>@Html.ActionLink("Delete Film", "Delete", new { id = Model.FilmId })</p>
