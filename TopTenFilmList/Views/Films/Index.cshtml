@{
  Layout ="_Layout";
}

@using TopTenFilmList.Models;

<h1>Films</h1>

@if (@Model.Count == 0)
{
  <h3>No films have been added yet!</h3>
} 

<ul>
  @foreach(Film film in Model)
  {
    <li>@Html.ActionLink($"{film.FilmName}", "Details", new { id = film.FilmId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new film", "Create")</p>
<p>@Html.ActionLink("Add new actor", "Create", "Actors")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>