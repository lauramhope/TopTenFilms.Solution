@{
  Layout = "_Layout";
}

@model TopTenFilmList.Models.Film

<h4>Edit this film: @Html.DisplayFor(model => model.FilmName)</h4>

<p>@Html.ValidationMessageFor(model => model.FilmName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FilmId)

  <p>Film Name: @Html.EditorFor(model => model.FilmName)</p>
 
 
  <p>Film Average Rating: @Html.EditorFor(model => model.FilmAverageRating)</p>
  <p>Film MPA Rating: @Html.EditorFor(model => model.FilmMPARating)</p>
  <p>Film Description: </p>
  <p>@Html.EditorFor(model => model.FilmDescription)</p>
  

  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to film list", "Index")</p>