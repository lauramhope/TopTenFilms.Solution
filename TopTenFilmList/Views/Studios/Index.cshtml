@{
  Layout = "_Layout";
}

@using TopTenFilmList.Models;

<h1>Studios</h1>

@if (@Model.Count == 0)
{
  <h3>No studios have been added yet!</h3>
} 

<ul>
  @foreach(Studio studio in Model)
  {
    <li>@Html.ActionLink($"{studio.Name}", "Details", new { id = studio.StudioId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new studio", "Create")</p>
<p>@Html.ActionLink("Add new film", "Create", "Films")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>